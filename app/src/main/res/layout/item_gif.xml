<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	  xmlns:app = "http://schemas.android.com/apk/res-auto"
	  android:layout_width = "match_parent"
	  android:layout_height = "wrap_content"
	  android:clipToPadding = "false" >
  
  <com.facebook.drawee.view.SimpleDraweeView android:id = "@+id/iv_gif"
		 xmlns:fresco = "http://schemas.android.com/apk/res-auto"
		 android:layout_width = "match_parent"
		 android:layout_height = "200dp"
		 fresco:actualImageScaleType = "fitXY"
		 fresco:roundBottomEnd = "false"
		 fresco:roundBottomStart = "false"
		 fresco:roundTopEnd = "false"
		 fresco:roundTopStart = "false"
		 fresco:roundWithOverlayColor = "@android:color/white"
		 fresco:roundedCornerRadius = "5dp"
		 fresco:roundingBorderColor = "@android:color/white"
		 fresco:roundingBorderWidth = "1px" />
  
  <com.sackcentury.shinebuttonlib.ShineButton
		 android:id = "@+id/sb_favorite"
		 android:layout_width = "30dp"
		 android:layout_height = "30dp"
		 android:layout_alignParentEnd = "true"
		 android:layout_alignParentTop = "true"
		 android:layout_centerInParent = "true"
		 android:layout_margin = "10dp"
		 android:elevation = "10dp"
		 android:outlineAmbientShadowColor = "@android:color/darker_gray"
		 android:outlineProvider = "paddedBounds"
		 android:outlineSpotShadowColor = "@android:color/darker_gray"
		 android:src = "@android:color/darker_gray"
		 app:allow_random_color = "false"
		 app:big_shine_color = "@android:color/holo_red_dark"
		 app:btn_color = "@android:color/darker_gray"
		 app:btn_fill_color = "@android:color/holo_red_dark"
		 app:click_animation_duration = "200"
		 app:enable_flashing = "false"
		 app:shine_animation_duration = "1500"
		 app:shine_count = "8"
		 app:shine_turn_angle = "10"
		 app:siShape = "@raw/heart"
		 app:small_shine_color = "@android:color/holo_red_light"
		 app:small_shine_offset_angle = "20" />


</RelativeLayout >